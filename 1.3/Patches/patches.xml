<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<!--gloves and boots patcher-->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef/apparel[not(.="wornGraphicPath")]/bodyPartGroups/li[(.="Hands") and not(.="Arms")]/../../layers</xpath>
		<value>
			<layers>
				<li>Overhead</li>
			</layers>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef/apparel[not(.="wornGraphicPath")]/bodyPartGroups/li[(.="Feet") and not(.="Legs")]/../../layers</xpath>
		<value>
			<layers>
				<li>Overhead</li>
			</layers>
		</value>
	</Operation>
	<!--body patcher-->
	<Operation Class="PatchOperationConditional">
		<xpath>Defs/BodyDef//groups/li[.="Hands"]</xpath>
		<match Class="PatchOperationInsert">
			<xpath>Defs/BodyDef//groups/li[.="Hands"]</xpath>
			<value>
				<li>Arms</li>
			</value>
		</match>
	</Operation>
	<Operation Class="PatchOperationConditional">
		<xpath>Defs/BodyDef//groups/li[.="Feet"]</xpath>
		<match Class="PatchOperationInsert">
			<xpath>Defs/BodyDef//groups/li[.="Feet"]</xpath>
			<value>
				<li>Legs</li>
			</value>
		</match>
	</Operation>
	
</Patch>